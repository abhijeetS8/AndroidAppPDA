<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".MainActivity">

    <!-- 端末Noのラベル -->

    <!-- 端末Noを表示するテキストビュー -->
    <TextView
        android:id="@+id/Label1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:layout_marginTop="38dp"
        android:padding="13dp"
        android:text="端末No："
        android:textColor="#171616"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/Lbl_TerminalNo"
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Label1"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="-49dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/Label1"
        android:padding="13dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <!-- バーコードのラベル -->

    <!-- バーコードを表示するテキストビュー -->

    <!-- ステータスを表示するテキストビュー -->


    <!-- 隠しテキスト入力欄（バーコード読み取り結果入力用） -->

    <TextView
        android:id="@+id/Label2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/Lbl_TerminalNo"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:padding="13dp"
        android:text="バーコード："
        android:textColor="#171616"
        android:textSize="18sp" />

    <!-- 送信ボタン -->

    <TextView
        android:id="@+id/Lbl_Barcode"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Lbl_TerminalNo"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="-133dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="63dp"
        android:layout_toEndOf="@+id/Label2"
        android:padding="14dp"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/Lbl_Communication"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Lbl_Barcode"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="32dp"
        android:gravity="center"
        android:padding="13dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/hide_Txt"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Lbl_Communication"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="-105dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/transparent"
        android:cursorVisible="false"
        android:gravity="center"
        android:imeOptions="actionDone"
        android:inputType="text"
        android:padding="13dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/Btn_Transmission"
        android:layout_width="169dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/Label2"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="148dp"
        android:layout_marginEnd="125dp"
        android:gravity="center"
        android:text="送信"
        android:textSize="16sp" />

</RelativeLayout>
